<Page x:Class="FurnitureStoreApp.Views.CalculationPage.CalculationCreditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FurnitureStoreApp.Views.CalculationPage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CalculationCreditPage">

    <Grid Background="White">
        <StackPanel HorizontalAlignment="Center" Grid.Row="1" Orientation="Vertical" VerticalAlignment="Center">
            <TextBlock Text="Сумма займа" FontSize="20" HorizontalAlignment="Center" Margin="5"/>
            <TextBox Name="loanAmount"/>
            
            <TextBlock Text="Срок займа" FontSize="20" HorizontalAlignment="Center"/>
            <TextBox Name="loanTerm" Width="175" Height="30" Margin="5"/>
            
            <Button Content="Рассчитать" Name="btnCalculation" Click="btnCalculation_Click"/>
        </StackPanel>
    </Grid>
</Page>

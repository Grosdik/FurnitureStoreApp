<Page x:Class="FurnitureStoreApp.Views.ControlPage.ManagerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FurnitureStoreApp.Views.ControlPage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ManagerPage">

    <Grid Background="White">
        <StackPanel HorizontalAlignment="Center" Grid.Row="1" Orientation="Vertical" VerticalAlignment="Center">
            <Button Content="Клиенты" Name="btnClient"/>
            <Button Content="Продукция" Name="btnProduct"/>
            <Button Content="Калькулятор кредита" Name="btnCalculatingCredit" Click="btnCalculatingCredit_Click"/>
        </StackPanel>
    </Grid>
</Page>
